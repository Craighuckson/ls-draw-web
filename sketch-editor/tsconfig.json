{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",           // output directory for compiled JS (optional with Vite)
    "baseUrl": ".",             // optional: enables absolute imports from /src
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],      // include all TS files under /src
  "exclude": ["node_modules"]
}
